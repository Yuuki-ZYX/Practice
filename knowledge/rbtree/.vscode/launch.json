  "version": "0.2.0",
  "configurations": [
    {
      "name": "调试红黑树",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/rbtree.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "D:\\program\\c++\\msys2\\mingw64\\bin\\gdb.exe", // 请根据你的 GDB 实际安装路径修改
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "将反汇编风格设置为 Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "使用 MSVC 调试",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/rbtree.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "externalTerminal"
    }
  ]
}
